CONFIG_SOC_FLASH_STM32=y
CONFIG_FLASH_STM32_QSPI=y
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=400000000
CONFIG_STM32_MEMMAP=y

# Enable the internal SMPS regulator
CONFIG_POWER_SUPPLY_LDO=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# enable uart driver
CONFIG_SERIAL=y

# enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# enable GPIO
CONFIG_GPIO=y

# Enable clocks
CONFIG_CLOCK_CONTROL=y

# Enable MPU
CONFIG_ARM_MPU=y

# enable clocks
CONFIG_CLOCK_CONTROL=y

# enable pin controller
CONFIG_PINCTRL=y

# 编译出的代码不进行优化，这样便于调试
CONFIG_NO_OPTIMIZATIONS=n
 
